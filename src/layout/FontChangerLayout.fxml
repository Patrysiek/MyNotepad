<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="TOP_CENTER" 
		maxHeight="200" 
		maxWidth="200" 
		minHeight="200" 
		minWidth="200" 
		prefHeight="200.0" 
		prefWidth="200.0" 
		fx:controller="application.FontChangerController"
		xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Font" />
      <ComboBox prefWidth="150.0" fx:id="fontComboBox"/>

      <Label text="Font Size" />
      <Spinner fx:id="fontSizeSpinner" editable="true"/>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button cancelButton="true" mnemonicParsing="false" text="Cancel" onAction="#cancelClick" />
            <Button contentDisplay="TOP" mnemonicParsing="false" prefHeight="31.0" prefWidth="44.0" text="Ok" onAction="#okClick"/>
         </children>
      </HBox>
   </children>
</VBox>
