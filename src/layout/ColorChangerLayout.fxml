<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="200" maxWidth="200" minHeight="200" minWidth="200" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.ColorChangerController">
   <children>
      <Label text="Text area color">
         <padding>
            <Insets top="5.0" />
         </padding></Label>
      <ColorPicker fx:id="textColorPicker"/>

      <Label text="Font Color">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin></Label>
      <ColorPicker fx:id="backgroundColorPicker">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="5.0" />
         </VBox.margin>
      </ColorPicker>

      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="200.0">
         <children>
            <Button cancelButton="true" mnemonicParsing="false" onAction="#cancelClick" text="Cancel" />
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#okClick" prefHeight="31.0" prefWidth="44.0" text="Ok" />
         </children>
      </HBox>
   </children>
</VBox>
